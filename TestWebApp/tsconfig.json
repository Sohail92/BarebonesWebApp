{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "removeComments": true,
    "skipLibCheck": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "Node",
    "typeRoots": ["node_modules/@types"],
    "lib": [
      "dom",
      "es2015.promise",
      "es5"
    ]
  },
  "exclude": [
    "node_modules",
    "wwwroot",
    "obj",
    "bin"
  ]
}